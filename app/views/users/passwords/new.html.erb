<div class="container" id="container">
  <div id="card-session" class="card">
    <div class="header">
      <%= image_tag("logo1.png", :styles=>"opacity: 1%", class: 'img-top')%>
    </div>
    <div class="card-body">
          <!-- <h5 class="card-title">Universal Code</h5> -->
      <h1 id="offcanvasRightLabel" class="titulo-iniciar" style="text-align:center;">Forgot your password?</h1>
<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= render "users/shared/error_messages", resource: resource %>

  <div class="row">
    <div class="col-md">
      <div class="form-floating">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
        <%= f.label :email %>
      </div>
    </div>
  </div>

  <div class="row">
      <div class="d-grid gap-2 col-6 mx-auto mb-3">
        <%= f.submit "Send me reset password instructions", class: 'btn btn-outline-danger reset' %>
      </div>
  </div>
  <div class="row">
    <div class="d-grid gap-2 col-6 mx-auto mb-3">
      <%= link_to "Log in", new_session_path(resource_name), class: 'btn btn-outline-warning login' %>
    </div>
  </div>
  <div class="row">
    <div class="d-grid gap-2 col-6 mx-auto mb-3">
      <%= link_to "Sign up", new_registration_path(resource_name), class: 'btn btn-outline-warning login' %>
    </div>
  </div>
<% end %>
    </div>
  </div>
</div>

